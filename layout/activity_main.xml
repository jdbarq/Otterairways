<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context="edu.csumb.james.otterairways.MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:text="Welcome to Air India"
        android:textAlignment="center"
        android:textAppearance="@style/ThemeOverlay.AppCompat.Dark"
        android:textColor="@color/Main"
        android:textDirection="firstStrong"
        android:textSize="30dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/create"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="80dp"
        android:layout_marginTop="80dp"
        android:text="Create Account"
        android:textColorHint="@color/colorPrimary" />

    <Button
        android:id="@+id/reserve"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/create"
        android:layout_marginHorizontal="80dp"
        android:text="Reserve Seat" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/reserve"
        android:layout_marginHorizontal="80dp"
        android:text="Cancel Reservation" />

    <Button
        android:id="@+id/manage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cancel"
        android:layout_marginHorizontal="80dp"
        android:text="Manage System" />

    <TextView
        android:layout_width="209dp"
        android:layout_height="34dp"
        android:layout_margin="90dp"
        android:layout_weight="    "
        android:text="                    Contact us         " />


</LinearLayout>
